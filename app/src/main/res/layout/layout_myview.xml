<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <com.eric.myfunny.view.QQStepView
        android:id="@+id/qq_step"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="#f4f5f6"
        android:textColor="#ce2c03"
        android:textSize="28sp"
        app:innerColor="#e6c909"
        app:lineWidth="10dp"
        app:maxStep="2000"
        app:outterColor="#e802cd"
        app:step="369" />

    <com.eric.myfunny.view.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:arrowExpand="@drawable/ic_snack_ok"
        app:arrowShrink="@drawable/ic_snack_error"
        app:positions="center"
        app:shrinkLines="5" />
</LinearLayout>
