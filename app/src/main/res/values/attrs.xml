<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <!--自定义View属性组声明-->
    <declare-styleable name="MyTextView">
        <!--默认展示行数，只能使用整数-->
        <attr name="shrinkLines" format="integer" />
        <!--收缩后的图标，只能使用应用图片资源-->
        <attr name="arrowShrink" format="reference" />
        <!--展开后的图标，只能使用应用图片资源-->
        <attr name="arrowExpand" format="reference" />
        <!-- positions属性只能指定<enum>声明的其中之一 -->
        <attr name="positions">
            <enum name="start" value="0" />
            <enum name="center" value="1" />
            <enum name="end" value="2" />
        </attr>
    </declare-styleable>
    <attr name="myattr" format="string" />

    <!--仿QQ计步器自定义属性-->
    <declare-styleable name="QQStepView">
        <attr name="outterColor" format="color" />
        <attr name="innerColor" format="color" />
        <attr name="lineWidth" format="dimension" />
        <attr name="step" format="float" />
        <attr name="maxStep" format="float" />
        <attr name="duration" format="float" />
        <!--自定义文字颜色直接使用系统属性-->
        <attr name="android:textColor" />
        <!--自定义文字大小直接使用系统属性-->
        <attr name="android:textSize" />
    </declare-styleable>
</resources>